<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.onemoaproject.dao.ProductReviewDao">

    <resultMap type="productReview" id="productReviewMap">
        <id column="prno" property="no"/>
        <result column="title" property="title"/>
        <result column="cont" property="content"/>
        <result column="cdt" property="createdDate"/>
        <result column="scope" property="score"/>
        <association property="product" javaType="product">
            <id column="pno" property="no"/>
        </association>
    </resultMap>

<select id="getAvg" resultType="java.lang.Double">
    select
        avg(rv.scope) average
    from
        product p
        left outer join product_review rv
        on p.pno = rv.pno
    where
        p.pno=#{value}
</select>
  
</mapper>