    <delete id="deleteFile">
        delete
        from
          product_review_file
        where
          prfno=#{value}
    </delete>

    <select id="findFileByNo" resultMap="orderReviewAttachedFileMap">
        select
        prfno,
        fpath,
        prno,
        fname
        from
          product_review_file
        where
          prfno=#{value}
    </select>
