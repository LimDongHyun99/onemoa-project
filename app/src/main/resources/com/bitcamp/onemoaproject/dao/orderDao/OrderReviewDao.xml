    <insert id="insertFiles" parameterType="orderReview">
        insert
        into
          product_review_file(fname, fpath, prno)
        values
          <foreach collection="orderReviewAttachedFiles" item="file" separator=",">
              (#{file.filename},#{file.filepath},#{no})
          </foreach>
    </insert>

    <delete id="deleteFiles">
        delete
        from
          product_review_file
        where
         prno=#{value}
    </delete>

